<%- include('../partials/header') %>


<div class="container col-md-8 offset-md-2 mt-5">
    <h1 class="text-center">Articles</h1>
    <hr>
    <ul class="list-group text-center col-md-8 offset-md-2" style="width: 42rem;">
        <% if(articles.length === 0){ %>
            <h3 class="text-center">There are No Articles</h3>
        <% } else { %>    
            <% for(let a of articles){ %>
                <li class="list-group-item text-center"><a href="/articles/<%= a._id %>/show"><%= a.name %></a></li>
            <% } %>
        <% } %>
    </ul>

</div>


<%- include('../partials/footer') %>