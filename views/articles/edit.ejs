<%- include('../partials/header') %>

<div class="container col-md-8 mt-5">

    <h2 >Edit Article</h2>
    <hr>
    <div class="">
        <form action="/articles/<%= article._id %>?_method=PUT" method="post">

            <div class="mb-3 col-md-6">
                <label class="form-label" for="name">Article Name</label>
                <input class="form-control" type="text" name="name" id="name" value="<%= article.name %>"><br>
            </div>

            <div class="mb-3">
                <label class="form-label" for="content">Article Content</label>
                <textarea class="form-control" name="text" id="text"><%= article.text %></textarea>
            </div>

            <div class="mb-3 col-md-2">
                <label class="form-label" for="category">Category</label>
                <select class="form-select" name="category" id="category" placeholder="category">
                    <% for(let cat of categories) {%>
                        <option value="<%= cat._id %>" ><%= cat.name %></option>
                    <% } %>
                </select>
            </div>

            </br>

            <button class="btn btn-primary" type="submit">Update</button>
        </form>
    </div>

</div>

<%- include('../partials/footer') %>