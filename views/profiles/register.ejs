<%- include('../partials/header') %>

<div class="container">

   <div class="card text-bg-dark mt-5 col-md-8 offset-md-4" style="width: 30rem;">
      <div class="card-body">
         <h2 class="text-center card-title">Register</h2>
         <hr>
         <form action="/profiles/register" method="post">
            <div class="mt-3">
                  <label class="form-label" for="name">Enter Username</label>
                  <input class="form-control" type="text" name="name" id="name" placeholder="Username">
               </div>
               <div class="mt-3">
                  <label class="form-label" for="email">Enter Email</label>
                  <input class="form-control" type="email" name="email" id="email" placeholder="Email">
               </div>
               <div class="mt-3">
                  <label class="form-label" for="password">Enter Password</label>
                  <input class="form-control" type="password" name="password" id="password" placeholder="Password">
               </div>
               <div class="mt-3">
                  <div class="mb-3 col-md-4">
                     <label for="category">Role</label>
                     <select class="form-select" name="role" id="role" placeholder="Role">
                         <% for(let r of profileRoles) { %>
                             <option value="<%= r._id %>"><%= r.name %></option>
                         <% } %>
                     </select>
                 </div>
               </div>
               <div class="mt-3">
                  <button  class="btn btn-primary" type="submit">SignUp</button>
               </div>
         </form>
      </div>
   </div>



</div>

<%- include('../partials/footer') %>