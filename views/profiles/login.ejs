<%- include('../partials/header') %>

<div class="container mt-5">

    <div class="card text-bg-dark mt-5 col-md-8 offset-md-4" style="width: 30rem;">
        <div class="card-body">
            <h2 class="text-center card-title">Login Profile</h2>
            <hr>
            <form action="/profiles/login" method="post">
                <div class="mt-3">
                    <label class="form-label" for="name">Enter Username</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Username">
                </div>
                <div class="mt-3">
                    <label class="form-label" for="password">Enter Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Password">
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>

</div>

<%- include('../partials/footer') %>